<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Animals'}); %>

<body>
  <% include ../../partials/navbar %>

  <div class="container">
    <h1>Animals</h1>

    <div class="my-3">
        <a href="/settings/animals/create" class="btn btn-primary">+ Create</a>
    </div>

    <table class="table table-bordered table-striped" id="animalTable">
        <thead>
            <tr>
                <td>Species</td>
                <td>NickName</td>
                <td>Enabled</td>
                <td>Actions</td>
            </tr>
        </thead>
        <% for(var i=0; i<data.length; i++) { %>
            <tr>
                <td><%= data[i].species %></td>
                <td><%= data[i].nickName %></td>
                <td><%= data[i].enabled %></td>
                <td><a href="/settings/animals/update?id=<%=data[i]._id%>">Update</a> 
                    | <a href="/settings/animals/delete?id=<%=data[i]._id%>">Delete</a></td>
            </tr>
        <% } %>
    </table>

  </div>
  
  <% include ../../partials/scripts %>

  <script type="text/javascript">
    $(document).ready( function () {
        $('#animalTable').DataTable({  
            responsive: true 
        });
    });
   </script>
</body>

</html>