<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Foods'}); %>

<body>
  <% include ../../partials/navbar %>

  <div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1>Update User</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <form action="/settings/users/update" method="post">
            <input type="hidden" name="id" value="<%=data.id%>"/>

            <div class="form-group">
                <label>Email</label>
                <input required type="text" class="form-control" name="email" value="<%=data.email%>">
            </div>
            <div class="form-group">
                <label>First Name</label>
                <input required type="text" class="form-control" name="firstName" value="<%=data.firstName%>">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input required type="text" class="form-control" name="lastName" value="<%=data.lastName%>">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
                <label>Role</label>
                <select required class="form-control" name="role">
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Update</button>
        </form>
    </div>
</div>

  <% include ../../partials/scripts %>
</body>

</html>